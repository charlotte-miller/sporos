= form_for([ @group, @meeting]) do |f|
  - if @meeting.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible{role:'alert'}
      %button.close.fade.in{data:{dismiss:'alert'}}
        %span{'aria-hidden'=>true} &times;
        %span.sr-only Close
      %h2= "#{pluralize(@meeting.errors.count, "error")} prevented this post from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg
    
  .actions
    = f.submit
