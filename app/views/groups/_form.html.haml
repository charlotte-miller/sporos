= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible{role:'alert'}
      %button.close.fade.in{data:{dismiss:'alert'}}
        %span{'aria-hidden'=>true} &times;
        %span.sr-only Close
      %h2= "#{pluralize(@group.errors.count, "error")} prevented this post from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :is_public, name: 'Public?'
    %br/
    = f.number_field :is_public
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
