/ Jasmine Specs
- namespace_id ||= 'global-search'

.search{id:namespace_id}
  %form.search-form{role:'search'}
    .input-group
      %input.text{id:"#{namespace_id}-input", type:'text', placeholder:'What are you looking for?', autocomplete:"off"}
      %input.search-hint
      .input-group-btn
        %button.search-button.submit{type:'submit'}
          %i.glyphicon.glyphicon-search

    - if defined? show_examples
      .examples
        Examples:&nbsp;
        %span.thin Kids, &nbsp;Parking, &nbsp;Small Groups, &nbsp;Luke 12:12, &nbsp;Current Series, &nbsp;Get Involved
