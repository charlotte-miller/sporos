= form_for [:admin, @ministry] do |f|
  - if @ministry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ministry.errors.count, "error")} prohibited this ministry from being saved:"
      %ul
        - @ministry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
