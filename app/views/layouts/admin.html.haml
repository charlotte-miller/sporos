!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Cornerstone Dashboard"
    = favicon_by_environment
    
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag "admin", :media => "all"
    / For third-generation iPad with high-resolution Retina display:
    / Size should be 144 x 144 pixels
    = favicon_link_tag 'images/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    / For iPhone with high-resolution Retina display:
    / Size should be 114 x 114 pixels
    = favicon_link_tag 'images/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    / For first- and second-generation iPad:
    / Size should be 72 x 72 pixels
    = favicon_link_tag 'images/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
    / Size should be 57 x 57 pixels
    = favicon_link_tag 'images/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    / For all other devices
    / Size should be 32 x 32 pixels
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
  %body
    .container
      .row
        = flash_messages
      = yield
      #global-nav
        .global_nav_item.col-xs-3
          = link_to admin_posts_path do
            %i.glyphicon.glyphicon-home
        .global_nav_item.col-xs-6
          - if current_page?(admin_posts_url)
            %a#new-post{href:'#'}
              %i.glyphicon.glyphicon-pencil
          - else
            = link_to 'GO BACK', :back

        .global_nav_item.col-xs-3
          / = link_to "Account", edit_user_registration_path
          / = link_to "Logout", destroy_user_session_path
          = link_to edit_current_user_path do
            %i.glyphicon.glyphicon-cog
      / /row
      %footer
        / %p &copy; Cornerstone Church of San Francisco 2015
    / /container
    /

    #javascripts
      / = partial 'layouts/ie'
      = javascript_include_tag  "vendor", digest:'v1'
      = javascript_include_tag  "admin"
      #page_specific_javascripts
        #load_once
          = yield :page_specific_js
        #load_every_time
          = yield :page_specific_js_initializers