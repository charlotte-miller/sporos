= form_for admin_post_path(@post) do |f|
  = f.hidden_field :type
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  - if @ministries.length > 1
    .field
      = f.label :Ministry
      = f.collection_select :ministry_id, @ministries, :id, :name, prompt:true
  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :display_options[:url], 'URL'
    = f.text_field :display_options[:url]
  .field
    = f.label :description, 'Comments'
    = f.text_area :description
  / .field
  /   = f.label :poster
  /   = f.text_field :poster
  .field
    = f.label :expired_at, 'Archive at:'
    = f.datetime_select :expired_at
  .actions
    = f.submit 'Publish'
