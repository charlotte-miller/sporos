= f.hidden_field :type, value:'Posts::Link'
.field
  .input-group
    %span#instrutions.input-group-addon
      #instruction-text Paste a Link:
      #show-loading
        %i.glyphicon.glyphicon-refresh.glyphicon-refresh-animate
    = f.text_field :url, name:'post[display_options][url]', type:"url", class:'form-control', id:'external-url-field', placeholder:'www.example.com/interesting-article'
#external-url-details{class: f.object.title.blank? ? '' : 'populated'}
  .field
    = f.label :title
    = f.text_field :title, class:'form-control', placeholder:"What are you sharing?"
  .field
    = f.label :description, 'Description or Commentary'
    = f.text_area :description, class:'form-control', placeholder:'Why are you sharing it?'
  .field
    = f.select :poster_remote_url, options_for_select(@possible_poster_images.map(){|url| ['Image Options', url, {'data-img-src'=>url}] }), {}, id:'link-poster'
    #all_image_options
      
