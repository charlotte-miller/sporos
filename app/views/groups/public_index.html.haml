= (render partial: 'sidebar')

- content_for(:page_specific_js) do
  = javascript_include_tag 'groups/public_index'

#groups-public
  .row
    .col-xs-6
      .well
        .form-inline
          .form-group
            = text_field_tag('email', nil, id: 'email_field', class: 'form-control', placeholder: 'Enter email...')
            = label_tag(:sign_up, 'Sign Up', id: 'join_button', class: 'btn btn-default')
    .col-xs-6
      .well{ id: 'login_button' }
        = label_tag(:login, 'Log In To Your Groups', class: 'btn')

%h3 Study groups
#groups-study-list
  - @groups.each do |group|
    = link_to(image_tag(group.poster_img.url), group_path(group))
